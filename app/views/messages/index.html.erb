<h1>Messages</h1>

<button type="button" class="btn btn-outline-success"><%= link_to "Enviar Mensagem", new_message_path %></button>
<br>
<br>

<div>
  <h1>Messagens recebidas</h1>
  <table class="table table-bordered flex-shrink:0;">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Remetente</th>
        <th scope="col">Conteudo</th>
        <th scope="col">Data de envio</th>
      </tr>
    </thead>
    <tbody>
      <% @messages_received.each do |message| %>
        <tr>
          <td><%=message.id%></td>
          <td><%=message.sender.username%></td>
          <td><%=message.content%></td>
          <td><%=message.created_at.strftime('%d/%m/%Y')%></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h1>Messagens enviadas</h1>
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">DestinatÃ¡rio</th>
        <th scope="col">Conteudo</th>
        <th scope="col">Data de envio</th>
      </tr>
    </thead>
    <tbody>
      <% @messages_sender.each do |message| %>
        <tr>
          <td><%=message.id%></td>
          <td><%=message.recipient.username%></td>
          <td><%=message.content%></td>
          <td><%=message.created_at.strftime('%d/%m/%Y')%></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>